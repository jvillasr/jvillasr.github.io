# Gemfile (root)
source "https://rubygems.org"

# Use GitHub Pages' pinned Jekyll + plugin set
gem "github-pages", group: :jekyll_plugins

# Local dev helpers (safe on Pages)
gem "webrick", "~> 1.8"
gem "kramdown-parser-gfm"

# If you like jekyll-admin for local edits, keep it **only** in development:
group :development do
  gem "jekyll-admin", "~> 0.11"
end